{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "./resources",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@/*": [
        "ts/*"
      ],
      "@css/*": [
        "css/*"
      ],
      "@media/*": [
        "media/*"
      ],
      "@img/*": [
        "media/img/*"
      ],
      "@icons/*": [
        "media/icons/*"
      ],
      "@fonts/*": [
        "media/fonts/*"
      ],
      "@components/*": [
        "ts/components/*"
      ],
      "@pages/*": [
        "ts/pages/*"
      ],
      "@types/*": [
        "ts/types/*"
      ],
    },
    "types": [
      "vite/client",
      "./resources/ts/types/generated.d.ts"
    ],
  },
  "include": [
    "resources/ts/**/*",
    "resources/css/**/*",
    "resources/media/**/*",
  ],
}